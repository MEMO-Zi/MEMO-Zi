<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MEMOZi" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">#DFADB5</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimary">@color/sub_purple</item>
    </style>

    <!-- Button -->
    <style name="Theme.MEMOZi.Button" parent="Widget.Material3.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Theme.MEMOZi.Button.L" parent="Theme.MEMOZi.Button">
        <item name="android:height">@dimen/button_l_height</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textAppearance">@style/TextAppearance.MEMOZi.ng_bold_15</item>
    </style>

    <style name="Theme.MEMOZi.Button.M" parent="Theme.MEMOZi.Button">
        <item name="android:height">@dimen/button_m_height</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textAppearance">@style/TextAppearance.MEMOZi.ng_reg_12_170</item>
    </style>

    <style name="Theme.MEMOZi.Button.S" parent="Theme.MEMOZi.Button">
        <item name="android:height">@dimen/button_s_height</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="backgroundTint">@color/selector_all_btn_background</item>
        <item name="android:textAppearance">@style/TextAppearance.MEMOZi.ssu_light_12</item>
    </style>
</resources>