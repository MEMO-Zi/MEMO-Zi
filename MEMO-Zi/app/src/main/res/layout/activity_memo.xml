<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.memo.MemoActivity">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/background_category_defalut"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_memo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/memo_tb">

            <ImageView
                android:id="@+id/iv_memo_tb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_all_app_logo_77" />
        </androidx.appcompat.widget.Toolbar>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/memo_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="9dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape_border_radius_8"
            android:elevation="10dp"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:queryHint="메모를 검색해 보세요!" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/memo_viewpager"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/memo_search" />

        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/memo_indicator"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginVertical="8dp"
            android:layout_marginTop="9dp"
            app:ci_drawable="@drawable/ic_onboarding_circle_13"
            app:ci_drawable_unselected="@drawable/ic_onboarding_circle_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/memo_viewpager" />

        <ImageButton
            android:id="@+id/memo_btn_category_edit"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="9dp"
            android:background="@null"
            android:backgroundTint="@null"
            android:src="@drawable/ic_edit_15"
            app:layout_constraintStart_toEndOf="@+id/memo_indicator"
            app:layout_constraintTop_toBottomOf="@id/memo_viewpager" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_memo_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="48dp"
            android:backgroundTint="@color/main_purple_02"
            android:contentDescription="Add Memo"
            android:foreground="@drawable/ic_cross_20"
            android:foregroundGravity="center"
            app:elevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fcv_memo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/memo_indicator" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
