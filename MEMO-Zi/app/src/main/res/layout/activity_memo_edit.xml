<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/memo_edit_ll1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="681dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/memo_edit_category"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="투두리스트"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_drop_black_11px" />

    </LinearLayout>

    <Button
        android:id="@+id/memo_edit_enroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="681dp"
        android:fontFamily="@font/cafe24ssurround_air"
        android:text="등록"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/memo_edit_ll1"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/memo_edit_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/nanumgothic"
        android:hint="제목"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/memo_edit_ll1" />

    <View
        android:id="@+id/view_item_memo_edit_horizontal_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="24dp"
        android:background="@color/soft_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/memo_edit_title" />

    <EditText
        android:id="@+id/memo_edit_contents"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/nanumgothic"
        android:hint="메모 내용을 입력하세요!"
        android:gravity="top"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_item_memo_edit_horizontal_bar" />

    <View
        android:id="@+id/view_item_memo_edit_horizontal_bar2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="9dp"
        android:background="@color/soft_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/memo_edit_contents" />

    <ImageButton
        android:id="@+id/memo_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:src="@drawable/ic_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_item_memo_edit_horizontal_bar2" />

    <View
        android:id="@+id/view_item_memo_edit_vertical_bar"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/memo_button_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/memo_bold"
        app:layout_constraintTop_toBottomOf="@+id/view_item_memo_edit_horizontal_bar2" />

    <ImageButton
        android:id="@+id/memo_italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:src="@drawable/ic_italic"
        app:layout_constraintStart_toStartOf="@id/view_item_memo_edit_vertical_bar"
        app:layout_constraintTop_toBottomOf="@+id/view_item_memo_edit_horizontal_bar2" />

    <View
        android:id="@+id/view_item_memo_edit_vertical_bar2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/memo_button_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/memo_italic"
        app:layout_constraintTop_toBottomOf="@+id/view_item_memo_edit_horizontal_bar2" />

    <ImageButton
        android:id="@+id/memo_strikethrough"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:src="@drawable/ic_strikethrough"
        app:layout_constraintStart_toStartOf="@id/view_item_memo_edit_vertical_bar2"
        app:layout_constraintTop_toBottomOf="@+id/view_item_memo_edit_horizontal_bar2" />

    <View
        android:id="@+id/view_item_memo_edit_vertical_bar3"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/memo_button_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/memo_strikethrough"
        app:layout_constraintTop_toBottomOf="@+id/view_item_memo_edit_horizontal_bar2" />

    <ImageButton
        android:id="@+id/memo_underline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:src="@drawable/ic_underline"
        app:layout_constraintStart_toStartOf="@id/view_item_memo_edit_vertical_bar3"
        app:layout_constraintTop_toBottomOf="@+id/view_item_memo_edit_horizontal_bar2" />

    <ImageButton
        android:id="@+id/memo_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="47dp"
        android:background="@null"
        android:src="@drawable/ic_check"
        app:layout_constraintEnd_toStartOf="@+id/memo_list"
        app:layout_constraintStart_toEndOf="@+id/memo_underline"
        app:layout_constraintTop_toBottomOf="@+id/view_item_memo_edit_horizontal_bar2" />

    <ImageButton
        android:id="@+id/memo_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="36dp"
        android:background="@null"
        android:src="@drawable/ic_orderedlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_item_memo_edit_horizontal_bar2" />

</androidx.constraintlayout.widget.ConstraintLayout>