<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/img_category_selected"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/bg_categroy_img"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/btn_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_category2" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:fontFamily="@font/cafe24ssurround_air"
        android:gravity="center"
        android:text="투두리스트"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_23"
        app:layout_constraintBottom_toBottomOf="@+id/img_category_selected"
        app:layout_constraintEnd_toEndOf="@+id/img_category_selected"
        app:layout_constraintStart_toStartOf="@+id/img_category_selected"
        app:layout_constraintTop_toTopOf="@+id/img_category_selected" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_category_btn"
        android:fontFamily="@font/cafe24ssurround_air"
        android:gravity="center"
        android:text="@string/category_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_category_selected" />

    <Button
        android:id="@+id/btn_delete_all"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_category_btn"
        android:fontFamily="@font/cafe24ssurround_air"
        android:gravity="center"
        android:text="@string/category_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_edit" />

    <Button
        android:id="@+id/btn_move_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_category_btn"
        android:fontFamily="@font/cafe24ssurround_air"
        android:gravity="center"
        android:text="@string/category_move"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_delete_all" />

</androidx.constraintlayout.widget.ConstraintLayout>